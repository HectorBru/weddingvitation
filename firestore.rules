rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Each invited user can read and write only their own invite document
    match /invites/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional public collection for read-only shared data (schedule, etc.)
    match /public/{doc=**} {
      allow read: if true;
    }
  }
}